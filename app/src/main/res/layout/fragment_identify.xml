<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/viewing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/lv_species"
            android:divider="#FFF"
            android:scrollbars="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollX="0px"
            android:scrollY="0px"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarSize="20dip"
            android:fadeScrollbars="false"
            android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
            android:paddingRight="@dimen/abc_dropdownitem_text_padding_right"
            android:paddingStart="@dimen/abc_dropdownitem_text_padding_left"
            android:paddingEnd="@dimen/abc_dropdownitem_text_padding_right"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
        </ListView>

        <ImageView
            android:id="@+id/iv_species"
            android:contentDescription="@string/view_species"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
            android:paddingRight="@dimen/abc_dropdownitem_text_padding_right"
            android:paddingStart="@dimen/abc_dropdownitem_text_padding_left"
            android:paddingEnd="@dimen/abc_dropdownitem_text_padding_right"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/species_filter"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
            android:paddingRight="@dimen/abc_dropdownitem_text_padding_right"
            android:paddingStart="@dimen/abc_dropdownitem_text_padding_left"
            android:paddingEnd="@dimen/abc_dropdownitem_text_padding_right"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:text="Filter results by keyword: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <TextView
                android:text="Filter results by location: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/species_data"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
            android:paddingRight="@dimen/abc_dropdownitem_text_padding_right"
            android:paddingStart="@dimen/abc_dropdownitem_text_padding_left"
            android:paddingEnd="@dimen/abc_dropdownitem_text_padding_right"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:text="Species Data: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Keywords: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Similar Species: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>